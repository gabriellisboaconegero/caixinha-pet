<%= form_with(model: produto, url: produto_venda_path, method: :post) do |form| %>
  <% if produto.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(produto.errors.count, "erro") %> não foi possível vender doce:</h2>

      <ul>
        <% produto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :vendidos, style: "display: block" do %>
      Vendidos
    <% end %>
    <%= form.number_field :vendidos, value:0 %>
  </div>

  <div>
    <%= form.submit "Vender #{produto.nome}"%>
  </div>
<% end %>
